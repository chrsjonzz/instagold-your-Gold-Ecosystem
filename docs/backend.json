{
  "entities": {
    "Review": {
      "title": "Review",
      "type": "object",
      "description": "Represents a customer review and rating.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the person leaving the review."
        },
        "rating": {
          "type": "number",
          "description": "A rating from 1 to 5."
        },
        "comment": {
          "type": "string",
          "description": "The text content of the review."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the review was created."
        }
      },
      "required": ["name", "rating", "comment", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/reviews/{reviewId}": {
      "schema": {
        "$ref": "#/entities/Review"
      },
      "description": "Stores customer reviews and ratings."
    }
  }
}
